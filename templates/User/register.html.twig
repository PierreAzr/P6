{# templates/register.html.twig #}
{% extends 'base.html.twig' %}

{% block body %}
<br>
<br>
<br>
<br>
  <div class="row justify-content-center">
    <div class="col-md-4">

{{ form_start(form) }}
  <legend><i class="fab fa-odnoklassniki" aria-hidden="true"></i> Inscription</legend>
    {{ form_label(form.username) }}
    {{ form_errors(form.username) }}
    {{ form_widget(form.username) }}

    {{ form_row(form.email) }}
    {{ form_row(form.password.first) }}
    {{ form_row(form.password.second) }}

    {{ form_row(form.agree, {label_attr: {class: 'checkbox-custom'} }) }}

    <div class="row justify-content-center">
      <button type="submit" class="btn btn-info">
          <i class="fa fa-sign-in" aria-hidden="true">S'inscrire !</i>
      </button>
    </div>

{{ form_end(form) }}

</div>
</div>


{% endblock %}
