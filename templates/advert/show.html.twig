                      <h3 class="tabstepcontent">Commentaire</h3>

              </div>



{% import _self as forms %}

{% macro recursiveComment(comment, advert) %}
	{% import _self as macros %}
  <br>
  <div class="card">
    <h5>{{comment.user.username}}</h5>
    {{ comment.date|date('d-m-Y H:i:s') }}
      <p>{{comment.content}}</p>
      <!-- <div style="text-align:right;"></div> -->



                  {% if is_granted('ROLE_USER') %}
    									{% if comment.lvl < 1 %}
                      <button class="responsebutton" id="button{{ comment.id }}" type="button" onclick="Response({{ comment.id }})" name="button">Reponde</button>
                      <div class="form_com" id="form{{ comment.id }}"></div>
    									{% else %}
                      <button class="responsebutton" id="button{{ comment.id }}" type="button" onclick="FinalResponse({{ comment.id }})" name="button">Reponde a un commentaire enfant</button>
                      <input id="inputform{{ comment.id }}" type="hidden" name="form{{ comment.id }}" value="{{comment.parent.id}}">
                      <div class="form_com" id="form{{ comment.id }}"></div>
    									{% endif %}
                  {% else %}
                    <button class="responsebutton" id="button{{ comment.id }}" type="button" onclick="Response({{ comment.id }})" name="button">Reponde</button>
                  {% endif %}

</div>

							{% if comment.children|length %}
								{% for child in comment.children %}
										<div style="padding-left:10%; border-left:5px solid red">
												{{ macros.recursiveComment(child, advert) }}
										</div>
								{% endfor %}
							{% endif %}


{% endmacro %}

<div class="col-sm-10 offset-sm-1">
{% for comment in advert.comments %}
   {#si le commentaire n'a pas de parent #}
   {% if comment.parent is null %}
   {#appel de la fonction recursive pour afficher les commentaires parents et enfants#}
   {#forms imports de "form.html.twig#}
