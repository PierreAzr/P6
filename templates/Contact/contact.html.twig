{% extends 'base.html.twig' %}

{% block title %}Nous contacter{% endblock %}
{% block meta %}
  <meta name="description" content="Pour plus d'informations sur Olikin, n'hésitez pas à nous contacter via notre formulaire. " />
{% endblock %}
{% block contact %}class="menuactive"{% endblock %}
{% block img %}
<div class="img-band img3">
<h2 class="text-center banner">Contact</h2>
</div>
{% endblock %}


{% block body %}
<div class="row justify-content-center">
  <div class="col-md-6 formback">
        <br>
        <h1>Conntactez-nous</h1>
        <br>
        {{ form_start(form) }}
        {# Les erreurs générales du formulaire. #}
        {{ form_errors(form) }}
          <div class="form-group">
            {{ form_label(form.name, "Nom") }}
            {{ form_errors(form.name) }}
            {{ form_widget(form.name, {'attr': {'class': 'form-control'}}) }}
          </div>
          <div class="form-group">
            {{ form_label(form.prename, "Prénom") }}
            {{ form_errors(form.prename) }}
            {{ form_widget(form.prename, {'attr': {'class': 'form-control'}}) }}
          </div>
          <div class="form-group">
            {{ form_label(form.email, "Votre Email") }}
            {{ form_errors(form.email) }}
            {{ form_widget(form.email, {'attr': {'class': 'form-control'}}) }}
          </div>
          <div class="form-group">
            {{ form_label(form.object, "Objet du messsage") }}
            {{ form_errors(form.object) }}
            {{ form_widget(form.object, {'attr': {'class': 'form-control'}}) }}
          </div>
          <div class="form-group">
            {{ form_label(form.message, "Message") }}
            {{ form_errors(form.message) }}
            {{ form_widget(form.message, {'attr': {'class': 'form-control','style': 'resize:vertical'}}) }}
            </div>
          <div class="form-group text-right">
            <br>
              {{ form_widget(form.submit, {'attr': {'class': 'btn-info'}}) }}
          </div>
        {{ form_rest(form) }}
        {{ form_end(form) }}

  </div>
  </div>
{% endblock %}
