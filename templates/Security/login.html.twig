{% extends 'base.html.twig' %}

{% block img %}
<div class="img-band img3">
<h2 class="text-center banner">Connexion</h2>
</div>
{% endblock %}
{% block body %}
    {% if error %}
        <div class="alert alert-danger">
            {{ error.messageKey }}
        </div>
    {% endif %}

    <div class="row justify-content-center">
        <div class="col-md-4 formback">
            <div class="">
                <form action="{{ path('security_login') }}" method="post">
                    <fieldset>
                        <legend><i class="fa fa-lock" aria-hidden="true"></i> Connexion</legend>
                        <div class="form-group">
                            <label for="username">Pseudo</label>
                            <input type="text" id="username" name="_username" value="{{ last_username }}" class="form-control"/>
                        </div>
                        <div class="form-group">
                            <label for="password">Mot de passe</label>
                            <input type="password" id="password" name="_password" class="form-control" />
                        </div>

                        <div class="form-group">
                          <div class="custom-control custom-checkbox">
                            <input type="checkbox"  class="custom-control-input" id="remember_me2" name="_remember_me" />
                            <label class="custom-control-label" for="remember_me2">Ce souvenir de moi</label>
                          </div>
                        </div>

                        <input type="hidden" name="_csrf_token" value="{{ csrf_token('authenticate') }}"/>
                        <div class="row justify-content-center">
                          <button type="submit" class="btn btn-info">
                              <i class="fa fa-sign-in" aria-hidden="true">Connexion</i>
                          </button>
                        </div>
                    </fieldset>
                </form>
            </div>
            <br>
            <a class="text-info" href="{{ path('security_resetpass_mailer')}}">Mot de passe oubli√©e ?</a>
            <p>Pas encore membre ? <a class="text-info" href="{{ path('user_registration')}}">Inscrivez-vous</a></p>

        </div>
    </div>
<br>
<br><br>
{% endblock %}
