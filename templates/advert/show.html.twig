    <script type="text/javascript">
    $( document ).ready(function() {
        $('#newformbutton').hide();
        $('#comment_idreponse').val('null');
    });

    function Response(e) {
      $('.responsebutton').show();
      $('#formremove').remove();
      if (e == 'null') {
        $('#newformbutton').hide();
      }else {
        $('#newformbutton').show();
        $('#formbase').append('<button id="formremove" type="button" onclick="Response(\'null\')" name="button">Annuler</button>');
        $('#button'+e).hide();
      }
      $('#formbase').appendTo('#form'+e);
      $('#comment_idreponse').val(e);
    };

    function FinalResponse(e) {
      $('.responsebutton').show();
      $('#formremove').remove();
      $('#button'+e).hide();
      $('#form'+e).append('<button id="formremove" type="button" onclick="Response(\'null\')" name="button">Annuler</button>');
      $('#formbase').appendTo('#form'+e);
      var parent =$('#inputform'+e).val();
      $('#comment_idreponse').val(parent);
    }
    </script>


